{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Countries' income group (2019)",
    "width": 800,
    "height": 500,
    "data": {
      "url": "ne_110m.json",
      "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
    },
    "projection": {"type": "equalEarth"},
    "layer":[
      {
        "transform": [
          {"calculate": "'Data is not available in ' + datum.properties.NAME", "as": "note"}
        ],
        "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"},
        "encoding": {
          "tooltip": {
            "field": "note"
          }
        }
      },
      {
        "transform": [
          {
            "lookup": "properties.NAME_LONG",
            "from": {
              "data": {
                "url": "../data/life_expectancy_2019.csv"
              },
              "key": "Country Name",
              "fields": ["IncomeGroup"]
            }
          }
        ],
        "mark": {"type": "geoshape", "stroke": "white"},
        "encoding": {
          "color": {
            "field": "IncomeGroup",
            "type": "nominal",
            "scale": {
              "type": "threshold",
              "domain": ["High income","Upper middle income", "Lower middle income", "Low income" ],
              "range": ["#225ea8","#41b6c4","#a1dab4","#ffffcc"]
            }
          },
          "tooltip": [
            {"field": "properties.NAME", "type": "nominal", "title": "Country"},
            {"field": "IncomeGroup", "type": "nominal"}
          ]
        }
      }
    ]
    
  }